<%- include("partials/header")%>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=put" method="post">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="title" value="<%=blog.title%>">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" placeholder="image" value="<%=blog.image%>">
      </div>
      <div class="field">
        <label>Body</label>
        <textarea name="blog[body]" placeholder="Body goes here" required><%=blog.body%></textarea>
      </div>
      <div class="">
        <button class="ui violet basic button" type="submit" name="submit">update</button>
      </div>
    </form>
</div>

<%- include("partials/footer")%>
